{
  "name": "resources",
  "version": "1.0.0",
  "description": "Core Implementation of graphical representation of Apiator Model JSON",
  "repository": {
    "type": "git",
    "url": "git@github.com:ainrif/apiator.git",
    "directory": "renderer/core-html-renderer/src/main/node"
  },
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/.bin/parcel index.html",
    "test": "./node_modules/.bin/cypress run",
    "test-ci": "npm start & while ! nc -z localhost 1234; do sleep 1; done; npm run test",
    "posix-build": "rm -rf ./dist && ./node_modules/.bin/parcel build ./index.html --no-source-maps --experimental-scope-hoisting && node posthtml.js",
    "purge": "rm -rf ./dist ./node_modules ./.cache",
    "size": "npm run posix-build && size-limit"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "size-limit": [
    {
      "path": "dist/*.js",
      "limit": "1000 ms"
    }
  ],
  "browserslist": [
    "last 1 chrome versions"
  ],
  "dependencies": {
    "clipboard": "^2.0.4",
    "font-awesome": "^4.7.0",
    "jquery": "^3.4.1",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@size-limit/preset-app": "^2.2.4",
    "babel-eslint": "^10.0.3",
    "caniuse-lite": "^1.0.30001017",
    "cypress": "^3.8.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^3.1.0",
    "less": "^3.10.3",
    "lint-staged": "^9.5.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-apiator": "file:parcel-plugin-apiator",
    "parcel-plugin-svelte": "^4.0.5",
    "posthtml-inline-assets": "^3.0.0",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "serialize-to-js": "^3.0.2",
    "svelte": "^3.16.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|svelte)": [
      "prettier --write --plugin-search-dir=.",
      "git add"
    ]
  },
  "comments": {
    "serialize-to-js": "security update of transitive dependency of parcel-bundler@1.12.4",
    "caniuse-lite": "feature update of transitive dependency of browserslist@4.7.1"
  }
}
