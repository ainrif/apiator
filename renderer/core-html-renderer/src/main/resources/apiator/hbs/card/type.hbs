<div class="target-marker" data-id="{{getIdForTargetMarkerOfModel type}}"></div>
<div class="panel type" data-type="standard">
    <div class="panel__header">
        <span class="panel__header-name">{{getAfterLastDot type}}</span>
        <span class="panel__header-share copy-btn" data-clipboard-text="{{getAbsoluteLinkToType type}}">Copy link</span>

        <span class="panel__header-view panel__header-view_active" data-type="standard">Standard view</span>
        <span class="panel__header-view" data-type="tech">Tech view</span>
    </div>

    <div class="panel__content panel__content_standard">
        {{#if description}}
            <div class="panel__content-item panel__content-description">{{description}}</div>
        {{/if}}

        <div class="panel__content-item">
            <div class="panel__content-title">Fields</div>
            <table class="table">
                <colgroup>
                    <col width="50%">
                    <col width="50%">
                </colgroup>
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Date type</th>
                </tr>
                </thead>
                <tbody>
                {{#each fields}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{{renderTemplateTypes this}}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>

        <div class="panel__content-item">

            <div class="panel__content-title">Source Reference</div>
            <div class="type__src-ref">
                <div class="type__src-ref-name">{{type}}</div>

                <div class="type__src-ref-copy copy-btn" data-clipboard-text="{{type}}">
                    copy reference
                </div>
            </div>
        </div>
    </div>

    <div class="panel__content panel__content_tech">
        <div class="panel__content-item panel__content-raw-view">
            <div class="title">Raw view</div>
            <pre class="viewer json">{{{highlightJSON this}}}</pre>
        </div>
    </div>
</div>
